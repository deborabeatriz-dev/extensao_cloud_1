{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "[Back] Iniciar Servidor",
            "skipFiles": ["<node_internals>/**"],
            "program": "${workspaceFolder}/server.js",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "[Front] Iniciar Chrome",
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal",
            "runtimeExecutable": "C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe",
            "runtimeArgs": [
                "--new-window",
                "http://localhost:3000"
            ]
        }
    ]
}
